@using Multilinks.Models;
@{
    Customer c = (Customer)Session["Customer"];
    Layout = "~/Views/Shared/_Layoutcustomer.cshtml";
}

<!-- Page Content -->
<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-md-12" style="margin-top:40px;">
                <h1>Checkout</h1>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("IndexCustomer","Home")">Home</a></li>
                    <li class="breadcrumb-item active">
                        <a href="@Url.Action("Checkout","Home")">Checkout</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
@using (Html.BeginForm("Paynow", "Home"))
{


    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-12 col-sm-12">
                <div class="callback-form ">
                    <div class="contact-form">
                        <h3>Customer Information</h3>
                        <div class="row">
                            
                            <div class="col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Name:" name="Order_Name" value="@c.Customer_Name" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Email:" name="Order_Email"  value="@c.Customer_Email" required>
                                </div>
                            </div>
                            <div class="col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Phone:" name="Order_Contact" value="@c.Customer_Contact" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class=" col-lg-12 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Address 1:" name="Order_Address"  value="@c.Customer_Address" required>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="City:" name="Order_City" required>
                                </div>
                            </div>
                            
                        </div>
                        
                        <div class="row">
                            <div class="col-sm-6 col-xs-12">
                                <div style="margin-left:-150px;">
                                    <h6 style="text-align:end;">Please Select PaymentMode</h6>
                                    <div class="form-check">
                                        <input style="margin-top:-5px;" class="form-check-input" type="radio" name="Order_PaymentMode" value="Cash on Delivery" checked>
                                        <label class="form-check-label" for="flexRadioDefault1">
                                            Cash on Delivery
                                        </label>
                                    </div>
                                    <div class="form-check" style="margin-left:-70px;">
                                        <input style="margin-top:-5px;" class="form-check-input" type="radio" name="Order_PaymentMode" value="Paypal" >
                                        <label class="form-check-label" for="flexRadioDefault2">
                                            Paypal
                                        </label>
                                    </div>
                                    <div class="form-check" style="margin-left:-20px;">
                                        <input style="margin-top:-5px;" class="form-check-input" type="radio" name="Order_PaymentMode" value="Paypal">
                                        <label class="form-check-label" for="flexRadioDefault2">
                                           Bank Transfer
                                        </label>
                                    </div>

                                </div>
                   </div>
                        </div>
                        <!--
                            <div class="row">
                                <div class="col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <select class="form-control" required>
                                            <option value="">-- Choose Payment method --</option>
                                            <option value="Cash on Delivery" name="Order_PaymentMode">Cash On Delivery</option>
                                            <option value="Paypal" name="Order_PaymentMode">PayPal</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
    -->

                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-12 col-sm-12">
                <div class="contact-information">
                    <h4 style="text-align:center;"> Cart Summary</h4>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-6">
                                    <em>Sub-total</em>
                                </div>
                                <div class="col-6 text-right">
                                    <strong>Rs @Session["TotalAmount"]</strong>
                                </div>
                            </div>
                        </li>

                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-6">
                                    <em>Extra</em>
                                </div>

                                <div class="col-6 text-right">
                                    <strong>Rs 0.00</strong>
                                </div>
                            </div>
                        </li>

                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-6">
                                    <em>Tax</em>
                                </div>

                                <div class="col-6 text-right">
                                    <strong>Rs 0</strong>
                                </div>
                            </div>
                        </li>

                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-6">
                                    <em>Total</em>
                                </div>

                                <div class="col-6 text-right">
                                    <strong>Rs @Session["Totalamount"]</strong>
                                </div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-12">
                                
                              
                                   
                                        <button class="btn" style="background-color: #a4c639;">
                                            Paynow
                                        </button>
                                    
                                </div>
                            </div>
                        </li>

                    </ul>
                </div>
            </div>

        </div>
    </div>
}
