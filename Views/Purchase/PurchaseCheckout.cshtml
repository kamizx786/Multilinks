
<!-- Page Content -->
<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-md-12" style="margin-top:40px;">
                <h1>Checkout</h1>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("IndexAdmin","Home")">Home</a></li>
                    <li class="breadcrumb-item active">
                        <a href="@Url.Action("PurchaseCheckout","Purchase")">Checkout</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
@using (Html.BeginForm("Additemtostock", "Purchase"))
{


    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-12 col-sm-12">
                <div class="callback-form ">
                    <div class="contact-form">
                        <h3>Customer Information</h3>
                        <div class="row">
                            <div class="col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <select class="form-control" required>
                                        <option value="">-- Choose Title --</option>
                                        <option value="miss">Miss</option>
                                        <option value="mr">Mr.</option>
                                        <option value="mrs">Mrs.</option>
                                        <option value="ms">Ms.</option>

                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Name:" name="Order_Name" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Email:" name="Order_Email" required>
                                </div>
                            </div>
                            <div class="col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Phone:" name="Order_Contact" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class=" col-lg-12 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Address 1:" name="Order_Address" required>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="City:" name="Order_City" required>
                                </div>
                            </div>
                            <div class="col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="State:" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Zip:">
                                </div>
                            </div>
                            <div class="col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <select class="form-control" required>
                                        <option value="">-- Choose Country --</option>
                                        <option value="">Pakistan</option>

                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <select class="form-control" required>
                                        <option value="">-- Choose Payment method --</option>
                                        <option value="bank">Bank account</option>
                                        <option value="cash">Cash</option>
                                        <option value="paypal">PayPal</option>
                                    </select>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-12 col-sm-12">
                <div class="contact-information">
                    <h4 style="text-align:center;"> Cart Summary</h4>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-6">
                                    <em>Sub-total</em>
                                </div>
                                <div class="col-6 text-right">
                                    <strong>Rs @Session["PTotalAmount"]</strong>
                                </div>
                            </div>
                        </li>

                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-6">
                                    <em>Extra</em>
                                </div>

                                <div class="col-6 text-right">
                                    <strong>Rs 0.00</strong>
                                </div>
                            </div>
                        </li>

                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-6">
                                    <em>Tax</em>
                                </div>

                                <div class="col-6 text-right">
                                    <strong>Rs 0</strong>
                                </div>
                            </div>
                        </li>

                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-6">
                                    <em>Total</em>
                                </div>

                                <div class="col-6 text-right">
                                    <strong>Rs @Session["PTotalamount"]</strong>
                                </div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-12">
                                
                                  
                                        <button class="btn" style="background-color: #a4c639;">
                                           Purchase
                                        </button>
                                  
                                </div>
                            </div>
                        </li>

                    </ul>
                </div>
            </div>

        </div>
    </div>
}